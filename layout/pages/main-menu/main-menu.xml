<root>
	<styles>
		<include src="file://{styles}/pages/main-menu.scss" />
	</styles>

	<scripts>
		<include src="file://{scripts}/pages/main-menu.js" />
	</scripts>

	<snippets>
		<snippet name="MainMenuMovieSnippet">
			<Panel>
				<Movie id="MainMenuMovie" hittest="false" ></Movie>
			</Panel>
		</snippet>
	</snippets>

	<ChaosMainMenu>
		<Panel id="MainMenuMovieParent" />
		<Panel id="MainMenuInput" class="fill">

			<!-- Main page content -->
			<Panel class="center vertical">
				<Label class="h3" text="Hello world!" />
				<Label class="h6" text="This is a barebones Panorama template." />
				<TextButton class="only-pause-menu" onactivate="resume()" text="Resume" />
				<TextButton class="only-main-menu" onactivate="play()" text="Play" />
				<TextButton onactivate="quit()" text="Quit" />
			</Panel>

		</Panel>

		<!-- Make sure these are at the bottom to get the z-order right -->
		<ChaosPopupManager id="PopupManager" />
		<ContextMenuManager id="ContextMenuManager" />
		<ChaosTooltipManager id="TooltipManager" hittest="false" />

		<!-- Doesn't actually include the notifications, but we use its position to figure out where to show them -->
		<Panel id="SteamNotificationsPlaceholder" hittest="false" />

	</ChaosMainMenu>
</root>